{
  "name": "Code Snip",
  "version": "1.0",
  "manifest_version": 2,
  "description": "This chrome extension allows you to copy code within your Stack Overflow searches with the click of a button. This expedites the amount of time it takes developers to copy and test code.",
  //background runs behind the scenes all the time
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
   "icons": {
    "16" : "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Code Snip",
    "default_popup": "overlay.html" //shows when user mouses over icon
  },
  //when making a rest API call, need ref for where making API call to
  "permissions": [
    "activeTab"
  ],
  //content scripts are loaded into your matched web pages
  "content_scripts": [{
    "css": ["css/overlay.css"],
    "js": ["js/overlay.js", "js/contentscript.js", "js/copy-to-clipboard.js"],
    "matches": ["https://stackoverflow.com/*"]
  }],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'"
}
